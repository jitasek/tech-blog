<div class="post">
  <div class="card border border-dark p-2 m-2">
    <a href="/dashboard/post/{{id}}"><div class="card-header">
        {{title}}
      </div></a>
    <div class="card-body">
      <blockquote class="blockquote mb-0">
        <p>{{content}}</p>
        <footer class="blockquote-footer">
          Posted by
          {{user.username}}
          on
          {{formatDate created_at}}
          <button
            type="button"
            onclick="deletePost({{id}})"
            class="btn btn-danger"
          >Delete</button>

          <button
            type="button"
            onclick="updatePost({{id}})"
            class="btn btn-warning"
          >Update</button>
        </footer>
      </blockquote>
    </div>
  </div>
</div>