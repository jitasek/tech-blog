<div>
  {{#each posts}}
    <div class="post">
      <div class="card border border-dark p-2 m-2">
        <div class="card-header">
          {{title}}
        </div>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p>{{content}}</p>
            <footer class="blockquote-footer">
              Posted by
              {{user.username}}
              on
              {{formatDate created_at}}
            </footer>
          </blockquote>
        </div>
      </div>
    </div>
  {{/each}}
</div>